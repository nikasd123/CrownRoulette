<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:padding="25dp"
    tools:context=".presentation.fragments.GameChoiceFragment">

    <ImageButton
        android:id="@+id/button_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/button_privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <GridLayout
        android:id="@+id/slots"
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:background="@drawable/slot_bg"
        android:layout_marginEnd="30dp"
        android:columnCount="5"
        android:rowCount="3"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_privacy"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_a"
            android:layout_row="0"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/img_pokies_7"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_heart"
            android:layout_row="2"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_q"
            android:layout_marginStart="20dp"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_10"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_j"
            android:layout_row="2"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_k"
            android:layout_marginStart="20dp"
            android:layout_row="0"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_q"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_7"
            android:layout_row="2"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_7"
            android:layout_marginStart="20dp"
            android:layout_row="0"
            android:layout_column="3"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_heart"
            android:layout_row="1"
            android:layout_column="3"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_k"
            android:layout_row="2"
            android:layout_column="3"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/img_pokies_10"
            android:layout_marginStart="20dp"
            android:layout_row="0"
            android:layout_column="4"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_a"
            android:layout_row="1"
            android:layout_column="4"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_pokies_diamond"
            android:layout_row="2"
            android:layout_column="4"/>

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_slots_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:backgroundTint="@null"
        android:fontFamily="@font/taviraj_medium"
        android:text="@string/play_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationY="-20dp"
        app:layout_constraintStart_toStartOf="@+id/slots"
        app:layout_constraintEnd_toEndOf="@+id/slots"
        app:layout_constraintTop_toBottomOf="@+id/slots"/>


    <FrameLayout
        android:id="@+id/roulette_frame"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/roulette_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_privacy">

        <ImageView
            android:id="@+id/roulette_sectors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/roulette_sectors" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:src="@drawable/roulette_win_arrow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/roulette_center" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_roulette_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:backgroundTint="@null"
        android:fontFamily="@font/taviraj_medium"
        android:text="@string/play_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationY="-20dp"
        app:layout_constraintStart_toStartOf="@+id/roulette_frame"
        app:layout_constraintEnd_toEndOf="@+id/roulette_frame"
        app:layout_constraintTop_toBottomOf="@+id/roulette_frame"/>

</androidx.constraintlayout.widget.ConstraintLayout>